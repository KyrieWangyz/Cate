<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="390dp">

        <ImageButton
            android:visibility="invisible"
            android:background="@color/transparent"
            android:src="@mipmap/calculator_btn_addmini"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/yes_add"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/menu_food"
            android:visibility="gone"
            android:layout_gravity="right"
            android:layout_width="270dp"
            android:layout_height="280dp"
            android:layout_marginTop="50dp"
            ></android.support.v7.widget.RecyclerView>\
        <TextView
            android:id="@+id/hintText"
            android:gravity="center"
            android:text="还未添加食物哦~                                 点击下方按钮添加"
            android:lineSpacingExtra="15dp"
            android:textColor="@color/colorText"
            android:textSize="24sp"
            android:layout_marginTop="135dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <ImageView
            android:background="@color/transparent"
            android:layout_marginTop="386dp"
            android:layout_gravity="right"
            android:src="@mipmap/calculator_icon_line"
            android:layout_width="321dp"
            android:layout_height="4dp"/>

        <ImageView
            android:src="@mipmap/calculator_icon_plussign_initial"
            android:layout_marginTop="335dp"
            android:layout_marginLeft="55dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView"/>

        <ImageButton
            android:background="@color/transparent"
            android:src="@mipmap/calculator_btn_add"
            android:layout_gravity="center"
            android:layout_marginTop="110dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/no_add"/>

    </FrameLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:visibility="invisible"
            android:layout_marginTop="3dp"
            android:gravity="right"
            android:text="982大卡"
            android:id="@+id/sum_calorie"
            android:textSize="30sp"
            android:textColor="@color/colorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/equalSport"
            android:visibility="invisible"
            android:layout_marginTop="12dp"
            android:gravity="right"
            android:text="≈慢跑148分钟"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#999999"
            />



        <ImageButton
            android:visibility="invisible"
            android:background="@color/transparent"
            android:src="@mipmap/calculator_btn_addto"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:id="@+id/add_record"
            android:layout_width="72dp"
            android:layout_height="72dp"/>
    </LinearLayout>
</LinearLayout>
