<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<LinearLayout
    android:background="@drawable/stroke_layout"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="170dp">
    <LinearLayout
        android:background="@drawable/stroke_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:background="@color/colorWhite"
            android:src="@mipmap/suggest_icon_breakfast"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="@string/breakfast"
            android:textColor="@color/colorText"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/breakfast_addbtn"
            android:layout_marginLeft="220dp"
            android:background="@color/colorWhite"
            android:src="@mipmap/record_btn_add"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_breakfast"
        android:background="@drawable/stroke_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
</LinearLayout>

    <LinearLayout
        android:background="@drawable/stroke_layout"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="170dp">
        <LinearLayout
            android:background="@drawable/stroke_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:background="@color/colorWhite"
                android:src="@mipmap/suggest_icon_lunch"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="@string/lunch"
                android:textColor="@color/colorText"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:id="@+id/lunch_addbtn"
                android:layout_marginLeft="220dp"
                android:background="@color/colorWhite"
                android:src="@mipmap/record_btn_add"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_lunch"
            android:background="@drawable/stroke_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/stroke_layout"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="170dp">
        <LinearLayout
            android:background="@drawable/stroke_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:background="@color/colorWhite"
                android:src="@mipmap/suggest_icon_dinner"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="@string/dinner"
                android:textColor="@color/colorText"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:id="@+id/dinner_addbtn"
                android:layout_marginLeft="220dp"
                android:background="@color/colorWhite"
                android:src="@mipmap/record_btn_add"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_dinner"
            android:background="@drawable/stroke_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>
