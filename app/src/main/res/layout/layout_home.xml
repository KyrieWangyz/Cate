<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cleverlin.cate.activity.MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:background="@color/colorMain"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <TextView
                android:gravity="center"
                android:textSize="20sp"
                android:text="私人厨房"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </FrameLayout>
    <com.example.cleverlin.cate.other.ObservableScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.cleverlin.cate.other.BannerLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:autoPlayDuration="5000"
                app:indicatorMargin="25dp"
                app:indicatorPosition="centerBottom"
                app:indicatorShape="oval"
                app:indicatorSpace="8dp"
                app:scrollDuration="1100"
                app:selectedIndicatorColor="#FFF097"
                app:selectedIndicatorHeight="8dp"
                app:selectedIndicatorWidth="8dp"
                app:unSelectedIndicatorColor="#BBBBBB"
                app:unSelectedIndicatorHeight="6dp"
                app:unSelectedIndicatorWidth="6dp"
                />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout

                android:background="@drawable/shape_corner"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="160dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:id="@+id/recommend"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false">
                    <ImageButton
                        android:id="@+id/recommendBnt"
                        android:layout_gravity="center"
                        android:background="#00000000"
                        android:src="@mipmap/home_icon_recommend"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>
                    <TextView
                        android:id="@+id/recommendTvw"
                        android:textColor="#443C33"
                        android:layout_gravity="center"
                        android:text="推荐食谱"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/search"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:background="#00000000"
                        android:src="@mipmap/home_icon_search"
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/searchBtn"/>

                    <TextView
                        android:id="@+id/searchTvw"
                        android:textColor="#443C33"
                        android:layout_gravity="center"
                        android:text="搜索食谱"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/personal"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/personalBtn"
                        android:background="#00000000"
                        android:src="@mipmap/home_icon_personal"
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                    <TextView
                        android:textColor="#443C33"
                        android:layout_gravity="center"
                        android:text="个人食谱"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/personalTvw"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageButton
                    android:background="#00000000"
                    android:src="#FFF097"
                    android:layout_marginLeft="20dp"
                    android:layout_width="10dp"
                    android:layout_height="25dp"/>
                <TextView
                    android:layout_marginLeft="8dp"
                    android:text="文章推荐"
                    android:textSize="16sp"
                    android:textColor="#443C33"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"/>
            </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:background="@drawable/shape_corner"

                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/recycle_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                </android.support.v7.widget.RecyclerView>
            </LinearLayout>

        </FrameLayout>


       </RelativeLayout>
    </com.example.cleverlin.cate.other.ObservableScrollView>
    </LinearLayout>
</RelativeLayout>
