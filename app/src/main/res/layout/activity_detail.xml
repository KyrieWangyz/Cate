<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cleverlin.cate.activity.DetailActivity">

    <com.example.cleverlin.cate.other.ObservableScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.cleverlin.cate.view.CustomFourImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
            <FrameLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageButton
                    android:id="@+id/returnAct"
                    android:background="@color/transparent"
                    android:src="@mipmap/nav_return"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <ImageButton

                    android:id="@+id/collect"
                    android:background="@color/transparent"
                    android:src="@mipmap/nav_like"
                    android:layout_gravity="right"
                    android:layout_marginTop="13dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
            </FrameLayout>
            <TextView
                android:id="@+id/nameText"
                android:text="@string/apricot_pie"
                android:layout_marginTop="273dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"/>
            <com.example.cleverlin.cate.other.RatingBar
                android:layout_marginTop="309dp"
                android:id="@+id/star"
                android:paddingTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                app:starCount="5"
                app:starEmpty="@mipmap/recipe_icon_star_not"
                app:starFill="@mipmap/recipe_icon_star"
                app:starHalf="@mipmap/recipe_icon_star_half"
                app:starImageSize="17dp"
                app:starPadding="1dp"
                app:starStep="2.5"
                app:stepSize="Half">

            </com.example.cleverlin.cate.other.RatingBar>
        </RelativeLayout>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginTop="44dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/recipe_icon_time"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:textColor="@color/colorText"
                    android:text="@string/need_time"
                    android:textSize="17sp"
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.example.cleverlin.cate.view.CircleProgressView
                        android:layout_gravity="center"
                        android:id="@+id/all_time"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>

                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/colorText2"
                        android:layout_marginTop="16dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/alltime"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.example.cleverlin.cate.view.CircleProgressView
                        android:layout_gravity="center"
                        android:id="@+id/cooking_time"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/colorText2"
                        android:layout_marginTop="16dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cooktime"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <com.example.cleverlin.cate.view.CircleProgressView
                    android:layout_gravity="center"
                    android:id="@+id/baked_time"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/colorText2"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bakedtime"
                    />
            </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.example.cleverlin.cate.view.CircleProgressView
                        android:layout_gravity="center"
                        android:id="@+id/stewing_time"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/colorText2"
                        android:layout_marginTop="16dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stewingtime"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/recipe_icon_nutrition"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

                <TextView
                    android:textColor="@color/colorText"
                    android:text="@string/nutrition"
                    android:textSize="17sp"
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/colorText2"
                        android:text="@string/calorie"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/calorie"
                        android:textSize="15sp"
                        android:textColor="@color/colorText"
                        android:layout_marginTop="16dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="263大卡"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/colorText2"
                        android:text="@string/protein"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/protein"
                        android:textSize="15sp"
                        android:textColor="@color/colorText"
                        android:layout_marginTop="16dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7克"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/colorText2"
                        android:text="@string/axunge"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/axunge"
                        android:textSize="15sp"
                        android:textColor="@color/colorText"
                        android:layout_marginTop="16dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11克"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/colorText2"
                        android:text="@string/carbohydrate"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/carbohydrate"
                        android:textSize="15sp"
                        android:textColor="@color/colorText"
                        android:layout_marginTop="16dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="33克"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/recipe_icon_material"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

                <TextView
                    android:textColor="@color/colorText"
                    android:text="@string/material"
                    android:textSize="17sp"
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/ingredientsneeded"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/recipe_icon_step"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

                <TextView
                    android:textColor="@color/colorText"
                    android:text="@string/detailsteps"
                    android:textSize="17sp"
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/detailSteps"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>





    </com.example.cleverlin.cate.other.ObservableScrollView>
</RelativeLayout>
