<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--标题栏（actionBar）颜色-->
        <item name="colorPrimary">@color/colorMain</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/colorMain</item>
        <item name="colorAccent">@color/colorMain</item>
    </style>
    <style name="AppTheme.Fullscreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>

        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorMain</item>
        <item name="colorAccent">#EFEFEF</item>
    </style>
    <style name="AppTheme.Record" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:windowFullscreen">true</item>-->

        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">#EFEFEF</item>
    </style>
    <style name="AppTheme.NoAcitonBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorMain</item>
        <item name="colorAccent">#EFEFEF</item>
    </style>
    <style name="AppThemeq" parent="@android:style/Theme.Holo.Light.DarkActionBar">

        <item name="android:windowActionBar">true</item>
    </style>
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/text_15_sp</item>
    </style>
    <declare-styleable name="SliderLayout">
        <attr name="slider_pic" format="reference" />
    </declare-styleable>

</resources>
